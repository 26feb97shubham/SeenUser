                android:layout_marginEnd="@dimen/_15sdp"
                android:textDirection="locale"
                android:textAlignment="viewEnd"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtSubTotal"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/txtTotalDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="@string/total_discount_colom"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtSubTotalPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="false"
                />
            <TextView
                    android:id="@+id/totalDiscAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:visibility="gone"
                android:textDirection="locale"
                android:textAlignment="viewEnd"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtSubTotalPrice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTotalDiscount"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/txtShippingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="@string/shipping_fee"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtTotalDiscount"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/shippingFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:textDirection="locale"
                android:textAlignment="viewEnd"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtTotalDiscount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtShippingFee"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/txtTaxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="@string/taxes"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtShippingFee"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/taxes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/_9ssp"
                android:textDirection="locale"
                android:textAlignment="viewEnd"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtShippingFee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTaxes"
                android:textAllCaps="false"
                />
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/taxes"/>
            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="@string/total_price"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/gold"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="true"
                />
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/gold"
                android:textSize="@dimen/_10ssp"
                android:textDirection="locale"
                android:textAlignment="viewEnd"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTotalPrice"
                android:textAllCaps="false"
                />
           <!-- <TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="Order#25256"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/totalPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="true"
                />-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/totalPrice"/>
             <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottomView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rvOrder"
                    android:elevation="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:background="@drawable/white_wide_rect_box"
                    >
                 <TextView
                     android:id="@+id/btnPlaceOrder"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_35sdp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginTop="@dimen/_15sdp"
                     android:layout_marginStart="@dimen/_20sdp"
                     android:layout_marginEnd="@dimen/_20sdp"
                     android:fontFamily="@font/expressway_rg"
                     android:background="@drawable/gold_filled_small_radius_box_curved"
                     android:includeFontPadding="false"
                     android:textColor="@color/white"
                     android:gravity="center"
                     android:textStyle="normal"
                     android:textSize="@dimen/_18ssp"
                     android:letterSpacing="0.1"
                     android:textAllCaps="true"
                     android:text="@string/place_order"/>
             </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
