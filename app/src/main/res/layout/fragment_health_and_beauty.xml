<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.HealthAndBeautyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/brands_loc_filter_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_8sdp"
            android:weightSum="1"
            android:baselineAligned="false">
            <RelativeLayout
                android:id="@+id/search_view2"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_6sdp"
                android:background="@drawable/gray_curved_rect_box">
                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:src="@drawable/search_gray_icon"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"/>
                <EditText
                    android:id="@+id/tv_frag_health_beauty_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/imgSearch"
                    android:textColor="@color/dark_gray"
                    android:text="@string/search_in_seen"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:fontFamily="@font/expressway_rg"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:imeOptions="actionDone"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loc_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/gray_curved_rect_box">
                <ImageView
                    android:id="@+id/iv_health_n_beauty_loc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/loc_pin"
                    android:padding="@dimen/_6sdp"
                    android:contentDescription="@string/filter" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_filter_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/gray_curved_rect_box">
                <ImageView
                    android:id="@+id/iv_health_n_beauty_filter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/filter_icon"
                    android:contentDescription="@string/filter" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layoutAnimation="@anim/layout_animation"
            android:clipToPadding="false"
            />
    </ScrollView>
    <TextView
        android:id="@+id/txtNoDataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        android:visibility="gone"
        android:text="@string/no_data_found"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/expressway_rg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>