<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:fontFamily="@font/expressway_rg"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/my_cart"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/title_text_size"
            android:textAllCaps="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layoutAnimation="@anim/layout_animation"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottomView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:elevation="@dimen/_15sdp"
                    android:visibility="gone"
                    android:background="#F5F5F5">

                    <TextView
                        android:id="@+id/txtSubTot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/subtotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/expressway_rg"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginStart="@dimen/_25sdp"/>
                    <TextView
                        android:id="@+id/txtTotalDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/expressway_rg"
                        android:text="@string/total_discount_colom"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        android:textAlignment="viewStart"
                        android:textDirection="locale"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_25sdp"
                        app:layout_constraintTop_toBottomOf="@+id/txtSubTot"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textAllCaps="false"
                        />
                    <TextView
                        android:id="@+id/totalDiscAmt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/expressway_rg"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        app:layout_constraintTop_toBottomOf="@+id/txtSubTot"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txtTotalDiscount"
                        android:textAllCaps="false"
                        />
                    <TextView
                        android:id="@+id/txtShipFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/totalDiscAmt"
                        android:text="@string/shipping_fee"
                        android:textAlignment="viewStart"
                        android:textDirection="locale"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/expressway_rg"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_25sdp"/>
                    <TextView
                        android:id="@+id/subTot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/aed_1_500_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale"
                        android:fontFamily="@font/expressway_rg"
                        app:layout_constraintStart_toEndOf="@+id/txtSubTot"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/shipFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/totalDiscAmt"
                        android:text="@string/aed_0_00"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/expressway_rg"
                        app:layout_constraintStart_toEndOf="@+id/txtShipFee"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/txtTaxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtShipFee"
                        android:text="@string/taxes"
                        android:textAlignment="viewStart"
                        android:textDirection="locale"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/expressway_rg"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_25sdp"/>
                    <TextView
                        android:id="@+id/taxes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtShipFee"
                        android:text="@string/aed_0_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale"
                        android:fontFamily="@font/expressway_rg"
                        app:layout_constraintStart_toEndOf="@+id/txtTaxes"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/gold"
                        app:layout_constraintTop_toBottomOf="@+id/txtTaxes">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txtTot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:text="@string/total_price"
                                android:textDirection="locale"
                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                android:fontFamily="@font/expressway_rg"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_15sdp"/>
                            <TextView
                                android:id="@+id/totalPrice"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtTot"
                                android:text="@string/aed_1_500_00"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                android:textDirection="locale"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/expressway_rg"
                                android:layout_marginStart="@dimen/_15sdp"/>
                            <TextView
                                android:id="@+id/btnCheckOut"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_30sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@drawable/black_filled_rect_box"
                                android:fontFamily="@font/farsi_simple_bold"
                                android:includeFontPadding="false"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:elevation="@dimen/_5sdp"
                                android:text="@string/checkout"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <TextView
        android:id="@+id/txtNoDataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_items_available"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:fontFamily="@font/expressway_rg" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />
</RelativeLayout>



