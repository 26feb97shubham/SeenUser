<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">
            <ImageView
                android:id="@+id/iv_recent_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/dummy_recent_product_mage"
                android:scaleType="centerCrop"
                android:contentDescription="@string/recent_products"/>

            <ProgressBar
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/supplierProductsProgressBar"
                android:visibility="visible"/>


            <!--  <ImageView
                  android:id="@+id/iv_add_to_favourites"
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="@dimen/_8sdp"
                  android:src="@drawable/gray_heart"
                  android:contentDescription="@string/favourites"
                  />-->

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/add_to_favourites"
                android:contentDescription="@string/favourites"/>

            <ImageView
                android:id="@+id/iv_add_to_cart"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/iv_like"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/add_to_baskets_cart"
                android:contentDescription="@string/favourites"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/_8sdp"
                android:id="@+id/civ_supplier_image"
                android:src="@drawable/user"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/left_right_curved_white_filled_rect_box"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tv_recent_product_item_name"
                    android:text="@string/item_name"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/expressway_rg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_recent_product_item_name"
                    android:id="@+id/tv_recent_product_item_price"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/aed_150"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_6ssp"
                    android:fontFamily="@font/expressway_rg"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintTop_toBottomOf="@id/tv_recent_product_item_price"
                    android:background="@color/gold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>