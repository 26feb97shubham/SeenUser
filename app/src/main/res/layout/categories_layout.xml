<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_4sdp">
        <LinearLayout
            android:id="@+id/ll_categories"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_4sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iconView"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/gold_filled_small_radius_box">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/dots_menu_transparent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txtCatName"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iconView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/expressway_rg"
                android:textDirection="locale"
                android:maxLines="2"
                android:textSize="@dimen/_7ssp"
                android:text="@string/categories" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_homemadesuppliers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_4sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iconView_homemadesuppliers"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/img_homemadesuppliers"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/homemadesuppliers"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txthomemadesuppliers"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iconView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/expressway_rg"
                android:textDirection="locale"
                android:maxLines="2"
                android:textSize="@dimen/_7ssp"
                android:text="@string/homemade_suppliers" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_brands"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_4sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iconView_brands"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/img_brands"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/brands"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txtbrands"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iconView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/expressway_rg"
                android:gravity="center"
                android:textDirection="locale"
                android:maxLines="2"
                android:textSize="@dimen/_7ssp"
                android:text="@string/brands" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>