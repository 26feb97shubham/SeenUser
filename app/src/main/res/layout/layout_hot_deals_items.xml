<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_5sdp"
        app:strokeColor="@color/gray"
        app:strokeWidth="@dimen/_1sdp"
        app:cardBackgroundColor="@color/primary_light_gray">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_image_layout"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/default_icon"/>

                        <TextView
                            android:id="@+id/discountPer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/_10_off"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp"
                            android:textStyle="normal"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:layout_constraintEnd_toStartOf="@+id/priceTag"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textAllCaps="true"
                            android:fontFamily="@font/expressway_rg"/>
                        <ImageView
                            android:id="@+id/priceTag"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/price_tag"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:layout_constraintTop_toTopOf="@id/discountPer"/>

                        <ImageView
                            android:id="@+id/hotDealsTag"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/hot_deals_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ratingView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/_3sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="@dimen/_10sdp">
                            <TextView
                                android:id="@+id/txtRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.5"
                                android:textAlignment="viewStart"
                                android:textDirection="locale"
                                android:layout_marginTop="@dimen/_1sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_9ssp"/>
                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:rating="3.5"
                                android:textAlignment="viewStart"
                                android:textDirection="locale"
                                android:theme="@style/orangeRatingBar"
                                android:layout_marginStart="@dimen/_5sdp"
                                style="?attr/ratingBarStyleSmall"
                                app:layout_constraintStart_toEndOf="@+id/txtRating"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/product_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/product_image_layout"
                app:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="false"
                android:fontFamily="@font/farsi_simple_bold"/>
            <ImageView
                android:id="@+id/supplierImg"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/product_image_layout"/>
            <TextView
                android:id="@+id/supplierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:text="@string/supplier_name"
                android:textColor="@color/gold"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/supplierImg"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/expressway_rg"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/gadgets"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:textColor="@color/gold"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/product_image_layout"
                app:layout_constraintTop_toBottomOf="@+id/productName"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/_8sdp"
                app:drawableStartCompat="@drawable/dotsmenu"
                android:fontFamily="@font/expressway_rg"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/aed_1_500_00"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/product_image_layout"
                app:layout_constraintTop_toBottomOf="@id/category"
                android:textAllCaps="true"
                android:fontFamily="@font/expressway_rg"/>

            <TextView
                android:id="@+id/discountedprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/aed_1_500_00"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/product_image_layout"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:textAllCaps="true"
                android:fontFamily="@font/expressway_rg"/>

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/heart_white"/>

            <ImageView
                android:id="@+id/imgcatgory"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@id/imgLike"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/shopping_cart_gray"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/mainCardView"/>
</androidx.constraintlayout.widget.ConstraintLayout>