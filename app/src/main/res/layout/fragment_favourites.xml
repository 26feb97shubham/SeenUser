<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.BrandsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/expressway_rg"
        android:src="@drawable/ic_launcher_foreground"
        android:text="@string/favourites"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_15sdp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/supplierLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:gravity="center"
                android:text="@string/suppliers"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/farsi_simple_bold"/>
            <View
                android:id="@+id/supplierView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:elevation="@dimen/_20sdp"
                android:background="@drawable/select_unselect_tab_bg"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:gravity="center"
                android:text="@string/products"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/farsi_simple_bold"/>
            <View
                android:id="@+id/productView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:elevation="@dimen/_20sdp"
                android:background="@drawable/select_unselect_tab_bg"/>
        </LinearLayout>

    </LinearLayout>
