<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_lite">
        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/cross_red"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon"/>
            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/gray_heart"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ratingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"
                    android:layout_marginTop="@dimen/_1sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_9ssp"/>
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3.5"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"
                    android:numStars="1"
                    android:theme="@style/orangeRatingBar"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="?attr/ratingBarStyleSmall"
                    app:layout_constraintStart_toEndOf="@+id/txtRating"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:gravity="start"
            android:text="@string/product_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:layout_constraintEnd_toStartOf="@+id/cross"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false"
            android:fontFamily="@font/farsi_simple_bold"/>

        <ImageView
            android:id="@+id/supplierImg"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/view"/>
        <TextView
            android:id="@+id/supplierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:text="@string/supplier_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/supplierImg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/expressway_rg"/>
        <TextView
            android:id="@+id/gadgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/gadgets"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:textColor="@color/black"
            android:textSize="@dimen/_7ssp"
            android:textStyle="normal"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/productName"
            android:textAllCaps="false"
            android:fontFamily="@font/expressway_rg"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/aed_1_500_00"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:layout_constraintEnd_toStartOf="@+id/llAddRemove"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/gadgets"
            android:textAllCaps="true"
            android:fontFamily="@font/expressway_rg"/>
        <TextView
            android:id="@+id/discountPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/_10_off"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:textStyle="normal"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/price"
            android:textAllCaps="true"
            android:fontFamily="@font/expressway_rg"/>
        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/price_tag"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/discountPer"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/price"/>

        <LinearLayout
            android:id="@+id/llAddRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/add"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/plus_small"/>
            <TextView
                android:id="@+id/txtQty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/black_small_rect_box"
                android:fontFamily="@font/expressway_rg"
                android:textSize="@dimen/_9ssp"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/gold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/remove"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/minus_icon"/>

        </LinearLayout>
        <TextView
            android:id="@+id/notAvailTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/this_item_is_currently_out_of_stock"
            android:textColor="@color/red"
            android:textSize="@dimen/_9ssp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llAddRemove"
            android:textAllCaps="false"
            android:fontFamily="@font/expressway_rg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>