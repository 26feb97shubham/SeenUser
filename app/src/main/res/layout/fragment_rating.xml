<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RatingFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/_15sdp">
            <LinearLayout
                android:id="@+id/recently_received_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#F5F5F5"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/farsi_simple_bold"
                    android:text="You recently received your item:"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginVertical="@dimen/_10sdp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mainCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="@dimen/_1sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/view"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/default_icon"/>
                                <ImageView
                                    android:id="@+id/imgLike"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_margin="@dimen/_4sdp"
                                    android:src="@drawable/gray_heart"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:gravity="start"
                            android:text="@string/brand_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textDirection="locale"
                            android:textAlignment="viewStart"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintStart_toEndOf="@+id/view"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textAllCaps="false"
                            android:fontFamily="@font/farsi_simple_bold"/>

                        <TextView
                            android:id="@+id/suppliername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/gadgets"
                            android:textDirection="locale"
                            android:textAlignment="viewStart"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintStart_toEndOf="@+id/view"
                            app:layout_constraintTop_toBottomOf="@+id/name"
                            android:textAllCaps="false"
                            android:fontFamily="@font/expressway_rg"/>
                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/gadgets"
                            android:textDirection="locale"
                            android:textAlignment="viewStart"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintStart_toEndOf="@+id/view"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textAllCaps="false"
                            android:fontFamily="@font/expressway_rg"/>

                        <TextView
                            android:id="@+id/product_pricw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/gadgets"
                            android:textDirection="locale"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/expressway_rg"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ratingView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginVertical="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@id/product_pricw">
                            <TextView
                                android:id="@+id/txtRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.5"
                                android:fontFamily="@font/expressway_rg"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_8ssp"/>
                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:rating="3.5"
                                android:theme="@style/orangeRatingBar"
                                android:layout_marginStart="@dimen/_5sdp"
                                style="?attr/ratingBarStyleSmall"
                                app:layout_constraintStart_toEndOf="@+id/txtRating"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:id="@+id/add_your_ratings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/farsi_simple_bold"
                android:text="Add your ratings"
                android:layout_gravity="center"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/recently_received_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/ratings_desc_tv"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:text="By adding your honest product rating, you are helping our community to have a standard of quality products for all our customers.\n\n Thank you for your cooperation!"
                android:layout_gravity="center"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:textColor="#9F9F9F"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/add_your_ratings_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_rating_layout"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratings_desc_tv"
                android:layout_marginVertical="@dimen/_15sdp"
                app:cardElevation="@dimen/_15sdp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/productimgview"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/productimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/default_icon"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:id="@+id/prod_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/expressway_rg"
                            android:text="Product Name"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold"
                            android:textColor="#9F9F9F"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@id/add_your_ratings_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_add_rating"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:fontFamily="@font/expressway_rg"
                        android:text="Add Rating"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:background="@drawable/gold_filled_small_radius_box"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/supplier_rating_layout"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_rating_layout"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardElevation="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/supplierimgview"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/supplierimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/default_icon"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:id="@+id/supplier_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/expressway_rg"
                            android:text="Supplier Name"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold"
                            android:textColor="#9F9F9F"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@id/add_your_ratings_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/productRatingBar"
                        style="?attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="3.5"
                        android:theme="@style/orangeRatingBar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>